<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="movie" type="com.example.truongquockhanh.mymovieapp.model.Movie"/>
    </data>
    <ScrollView android:layout_height="match_parent" android:layout_width="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:context=".feature.detail_movie.DetailMovieFragment">
            <FrameLayout
                    android:id="@+id/image_poster" android:layout_width="match_parent" android:layout_height="440dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent">
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        app:backPath="@{movie.backdropPath}"
                        tools:src="@android:color/holo_purple"
                />

                <View android:layout_width="match_parent" android:layout_height="150dp"
                      android:background="@drawable/gradient_poster"
                      android:layout_gravity="bottom"/>
            </FrameLayout>

            <androidx.appcompat.widget.LinearLayoutCompat
                    android:paddingStart="32dp"
                    android:paddingEnd="32dp"
                    android:paddingBottom="32dp"
                    app:layout_constraintTop_toBottomOf="@id/image_poster"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="0dp" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                <TextView
                        android:text="@{movie.originalTitle}"
                        tools:text="Avenger"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:id="@+id/tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <TextView
                        tools:text="8.9"
                        android:text="@{String.valueOf(movie.voteAverage)}"
                        android:layout_marginStart="8dp"
                        android:textSize="18sp"
                        android:id="@+id/tv_point"
                        android:textStyle="bold"
                        android:textColor="@android:color/holo_red_dark"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"/>


                <TextView android:textSize="12sp"
                          tools:text="Drama &amp; Loving"
                          android:textStyle="bold"
                          android:layout_width="match_parent" android:layout_height="wrap_content"/>

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="@{movie.releaseDate}"
                          android:textSize="10sp"
                          app:setGenres="@{movie.genres}"
                          android:textColor="@android:color/darker_gray"
                          tools:text="2019-Jan"/>

                <androidx.cardview.widget.CardView app:cardElevation="8dp"
                                                   app:cardCornerRadius="8dp"
                                                   android:layout_margin="8dp"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="75dp">
                    <androidx.appcompat.widget.LinearLayoutCompat android:weightSum="3"
                                                                  android:orientation="horizontal"
                                                                  android:layout_width="match_parent"
                                                                  android:layout_height="match_parent">
                        <androidx.appcompat.widget.LinearLayoutCompat android:layout_width="0dp"
                                                                      android:layout_weight="1"
                                                                      android:weightSum="2"
                                                                      android:orientation="vertical"
                                                                      android:layout_height="match_parent">
                            <TextView android:layout_width="match_parent" android:layout_height="0dp"
                                      android:layout_weight="1"
                                      android:textStyle="bold"
                                      app:setRuntime="@{movie.runtime}"
                                      android:gravity="center|bottom"
                                      tools:text="140 m"/>
                            <TextView android:layout_width="match_parent" android:layout_height="0dp"
                                      android:layout_weight="1"
                                      android:textColor="@android:color/darker_gray"
                                      android:gravity="center|top"
                                      android:text="Time"/>
                        </androidx.appcompat.widget.LinearLayoutCompat>
                        <androidx.appcompat.widget.LinearLayoutCompat android:layout_width="0dp"
                                                                      android:layout_weight="1"
                                                                      android:weightSum="2"
                                                                      android:orientation="vertical"
                                                                      android:layout_height="match_parent">
                            <TextView android:layout_width="match_parent" android:layout_height="0dp"
                                      android:layout_weight="1"
                                      android:textStyle="bold"
                                      android:gravity="center|bottom"
                                      app:setLanguage="@{movie.language}"
                                      tools:text="140 m"/>
                            <TextView android:layout_width="match_parent" android:layout_height="0dp"
                                      android:layout_weight="1"
                                      android:textColor="@android:color/darker_gray"
                                      android:gravity="center|top"
                                      android:text="Language"/>
                        </androidx.appcompat.widget.LinearLayoutCompat>
                        <androidx.appcompat.widget.LinearLayoutCompat android:layout_width="0dp"
                                                                      android:layout_weight="1"
                                                                      android:weightSum="2"
                                                                      android:orientation="vertical"
                                                                      android:layout_height="match_parent">
                            <TextView android:layout_width="match_parent" android:layout_height="0dp"
                                      android:layout_weight="1"
                                      android:textStyle="bold"
                                      android:text="@{String.valueOf(movie.voteCount)}"
                                      android:gravity="center|bottom"
                                      tools:text="140 m"/>
                            <TextView android:layout_width="match_parent" android:layout_height="0dp"
                                      android:layout_weight="1"
                                      android:textColor="@android:color/darker_gray"
                                      android:gravity="center|top"
                                      android:text="Vote"/>
                        </androidx.appcompat.widget.LinearLayoutCompat>
                    </androidx.appcompat.widget.LinearLayoutCompat>


                </androidx.cardview.widget.CardView>

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="Introduction"
                          android:textStyle="bold"
                          android:textSize="14sp"/>
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:textColor="@android:color/darker_gray"
                          android:text="@{movie.overview}"
                          tools:text="Abc hihihih"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <ProgressBar android:visibility="gone"
                         app:layout_constraintStart_toStartOf="parent"
                         app:layout_constraintEnd_toEndOf="parent"
                         app:layout_constraintTop_toTopOf="parent"
                         app:layout_constraintBottom_toBottomOf="parent"
                         android:id="@+id/progress" android:layout_height="75dp" android:layout_width="75dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>